{
	"schemaVersion": 1,
	"id": "ttvoice",
	"version": "${version}",
	"name": "Text to Voice",
	"description": "Type to speak!",
	"authors": ["FlooferLand"],
	"contact": {
		"homepage": "https://flooferland.com/",
		"sources": "https://github.com/FlooferLand/ttvoice"
	},
	"license": "GPL-3.0",
	"icon": "assets/ttvoice/textures/icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
            "com.flooferland.ttvoice.TextToVoiceClient"
		],
		"voicechat": [
			"com.flooferland.ttvoice.VcPlugin"
		],
		"modmenu": [
			"com.flooferland.ttvoice.ModMenuEntry"
		],
		"figura_event": [
			"com.flooferland.ttvoice.figura.FiguraEventPlugin"
		]
	},
	"mixins": [
		{
			"config": "ttvoice.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=${loader_version}",
		"minecraft": "~${minecraft_version}",
		"java": ">=${java_version}",
		"fabric-api": "*",
		"fabric-language-kotlin": ">=${fabric_kotlin_version}+kotlin.${kotlin_version}",
		"voicechat": ">=${minecraft_version}-${voicechat_mod_version}"
	},
	"suggests": {
		"modmenu": ">=${mod_menu_version}",
		"figura": ">=${figura_version}"
	}
}